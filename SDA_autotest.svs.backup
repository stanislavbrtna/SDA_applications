function init {
  FAIL = 0;

  scr = sys pAddScreen();

#*  sys pSetMainScr(123);

  if (sys pGetMainScr() != 123) {
    FAIL = 1;
    print("set or get main screen");
  }
*#
  sys pSetMainScr(scr);

  prg = 0;
}

function update {
  if (FAIL == 0) {
    prg++;
  } else {
    prg = 0;
  }
  cur = 0;

  cur++;
  if(prg == cur) {
    print("pGetRedraw:", "");
    sys pSetRedraw();
    return;
  }

  cur++;
  if(prg == cur) {
    if (not sys pGetRedraw()) {
      FAIL = 1;
      print("FAIL");
    } else {
      print("OK");
    }
    return;
  }

  cur++;
  if(prg == cur) {
    print("Counter:", "");
    sys cntSet(100);

    if (sys cntGet() > 100 or sys cntGet() < 10) {
      FAIL = 1;
      print("FAIL (1)");
    }
    return;
  }

  cur++;
  if(prg == cur) {
    if (sys cntGet() >= 100) {
      FAIL = 1;
      print("FAIL (2)");
    } else {
      if (FAIL != 0)
        print("OK");
    }
    return;
  }

  #TODO: hw buttons (also with lcd off)
  #TODO: text input
  #TODO: keyboard hide/show

  cur++;
  if(prg == cur) {
    print("Random:", "");
    if (sys rnd() == sys rnd() and sys rnd() ==  sys rnd()) {
      FAIL = 1;
      print("FAIL (random not random)");
    } else {
      if (FAIL != 0)
        print("OK");
    }
    return;
  }


}
